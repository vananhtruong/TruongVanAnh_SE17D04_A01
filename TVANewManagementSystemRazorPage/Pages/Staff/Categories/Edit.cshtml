@page "{id?}"
@model TVANewManagementSystemRazorPage.Pages.Staff.Categories.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml"; // Điều chỉnh đường dẫn layout nếu cần
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.CategoryId" />
            <div class="form-group">
                <label asp-for="Category.CategoryName" class="control-label"></label>
                <input asp-for="Category.CategoryName" class="form-control" required />
                <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.CategoryDesciption" class="control-label"></label>
                <input asp-for="Category.CategoryDesciption" class="form-control" />
                <span asp-validation-for="Category.CategoryDesciption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.ParentCategoryId" class="control-label"></label>
                <select asp-for="Category.ParentCategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName", Model.Category.ParentCategoryId))">
                    <option value="">-- Select Parent Category --</option>
                </select>
                <span asp-validation-for="Category.ParentCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActiveCheckbox" class="control-label"></label>
                <input asp-for="IsActiveCheckbox" type="checkbox" class="form-check-input" />
                <span asp-validation-for="IsActiveCheckbox" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}