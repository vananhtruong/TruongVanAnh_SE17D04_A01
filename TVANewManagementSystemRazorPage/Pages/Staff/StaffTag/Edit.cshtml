@page "{id:int}"
@model TVANewManagementSystemRazorPage.Pages.Staff.StaffTag.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml"; // Adjust if your layout is in Views folder
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Edit Tag</h1>

    <div class="card">
        <div class="card-body">
            <h4>Tag</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Tag.TagId" />
                        <div class="form-group">
                            <label asp-for="Tag.TagName" class="control-label"></label>
                            <input asp-for="Tag.TagName" class="form-control" />
                            <span asp-validation-for="Tag.TagName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tag.Note" class="control-label"></label>
                            <input asp-for="Tag.Note" class="form-control" />
                            <span asp-validation-for="Tag.Note" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-page="Index" class="btn btn-secondary ml-2">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}