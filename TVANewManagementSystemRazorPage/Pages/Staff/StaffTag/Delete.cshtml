@page "{id:int}"
@model TVANewManagementSystemRazorPage.Pages.Staff.StaffTag.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml"; // Adjust if your layout is in Views folder
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Delete Tag</h1>

    <div class="card">
        <div class="card-body">
            <h3>Are you sure you want to delete this?</h3>
            <h4>Tag</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tag.TagName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tag.TagName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tag.Note)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tag.Note)
                </dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Tag.TagId" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>