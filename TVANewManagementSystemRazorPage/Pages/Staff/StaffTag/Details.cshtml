@page "{id:int}"
@model TVANewManagementSystemRazorPage.Pages.Staff.StaffTag.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml"; // Adjust if your layout is in Views folder
}

<div class="container-fluid">
    <h1 class="mt-4 mb-4">Tag Details</h1>

    <div class="card">
        <div class="card-body">
            <h4>Tag</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tag.TagName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tag.TagName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Tag.Note)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tag.Note)
                </dd>
            </dl>
            <div class="mt-3">
                <a asp-page="Edit" asp-route-id="@Model.Tag?.TagId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-page="Index" class="btn btn-secondary ml-2">Back to List</a>
            </div>
        </div>
    </div>
</div>