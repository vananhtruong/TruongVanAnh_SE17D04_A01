@page "{id:int}"
@model TVANewManagementSystemRazorPage.Pages.Admin.SystemAccounts.DeleteModel
@{
    ViewData["Title"] = "Delete Account";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml"; // Match MVC layout
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Delete Account</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Account Deletion</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Are you sure you want to delete this account? This action cannot be undone.
            </div>

            <h5 class="mt-3">System Account Details</h5>
            <hr />
            <dl class="row mb-0">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SystemAccount.AccountName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SystemAccount.AccountName)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SystemAccount.AccountEmail)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SystemAccount.AccountEmail)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SystemAccount.AccountRole)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.SystemAccount.AccountRole)
                </dd>

                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.SystemAccount.AccountPassword)
                </dt>
                <dd class="col-sm-9">
                    <em class="text-muted">********</em>
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-center">
            <form method="post" class="d-inline">
                <input type="hidden" asp-for="SystemAccount.AccountId" />
                <button type="submit" class="btn btn-danger me-3">
                    <i class="bi bi-trash me-2"></i>Delete
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .font-weight-bold {
            font-weight: 600;
        }

        .card-footer {
            border-top: 1px solid #eee;
        }

        .btn i {
            vertical-align: middle;
        }
    </style>
}