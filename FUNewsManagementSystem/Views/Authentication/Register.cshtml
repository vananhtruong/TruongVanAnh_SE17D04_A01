@model BusinessObjects.Models.SystemAccount

@{
    Layout = null; // Không dùng layout chung
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tài khoản Lecturer</title>
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #e0eafc, #cfdef3); /* Gradient nền nhẹ */
            margin: 0;
        }

        .register-container {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 380px;
            transition: transform 0.3s ease; /* Hiệu ứng khi hover */
        }

            .register-container:hover {
                transform: translateY(-5px); /* Nhấc nhẹ container khi hover */
            }

            .register-container h2 {
                text-align: center;
                margin-bottom: 25px;
                color: #2c3e50;
                font-weight: 600;
            }

            .register-container .form-group {
                margin-bottom: 20px;
            }

            .register-container label {
                display: block;
                margin-bottom: 8px;
                color: #34495e;
                font-size: 14px;
                font-weight: 500;
            }

            .register-container input {
                width: 100%;
                padding: 12px;
                border: 1px solid #dfe6e9;
                border-radius: 6px;
                box-sizing: border-box;
                font-size: 14px;
                transition: border-color 0.3s ease;
            }

                .register-container input:focus {
                    border-color: #3498db;
                    outline: none;
                    box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
                }

            .register-container .btn-group {
                display: flex;
                justify-content: space-between; /* Tách biệt các nút */
                gap: 15px; /* Khoảng cách giữa các nút */
                margin-top: 30px;
            }

            .register-container .btn {
                flex: 1; /* Các nút chia đều không gian */
                padding: 12px;
                border: none;
                border-radius: 6px;
                font-size: 14px;
                cursor: pointer;
                text-align: center;
                transition: all 0.3s ease;
            }

            .register-container .btn-primary {
                background-color: #3498db;
                color: white;
            }

                .register-container .btn-primary:hover {
                    background-color: #2980b9;
                    box-shadow: 0 2px 10px rgba(52, 152, 219, 0.4);
                }

            .register-container .btn-secondary {
                background-color: #95a5a6;
                color: white;
            }

                .register-container .btn-secondary:hover {
                    background-color: #7f8c8d;
                    box-shadow: 0 2px 10px rgba(149, 165, 166, 0.4);
                }

        .alert-success {
            background-color: #dff0d8;
            color: #3c763d;
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 14px;
        }

        .text-danger {
            color: #e74c3c;
            margin-bottom: 15px;
            list-style: none;
            font-size: 13px;
            text-align: center;
        }

            .text-danger li::marker {
                content: none;
            }

        .field-validation-error {
            color: #e74c3c;
            font-size: 12px;
            display: block;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h2>Đăng ký tài khoản Lecturer</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AccountName" class="control-label">Tên tài khoản</label>
                <input asp-for="AccountName" class="form-control" placeholder="Nhập tên tài khoản" required />
                <span asp-validation-for="AccountName" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccountEmail" class="control-label">Email</label>
                <input asp-for="AccountEmail" class="form-control" type="email" placeholder="Nhập email" required />
                <span asp-validation-for="AccountEmail" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccountPassword" class="control-label">Mật khẩu</label>
                <input asp-for="AccountPassword" class="form-control" type="password" placeholder="Nhập mật khẩu" required />
                <span asp-validation-for="AccountPassword" class="field-validation-error"></span>
            </div>

            <div class="btn-group">
                <input type="submit" value="Đăng ký" class="btn btn-primary" />
                <a asp-action="Login" class="btn btn-secondary">Quay lại đăng nhập</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>