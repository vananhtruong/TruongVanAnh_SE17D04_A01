<!-- Corrected View with Register Link -->
@model BusinessObjects.Models.SystemAccount

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }

        .login-container {
            background: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 350px;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 20px;
                color: #333;
            }

            .login-container .form-group {
                margin-bottom: 15px;
            }

            .login-container label {
                display: block;
                margin-bottom: 5px;
                color: #555;
            }

            .login-container input {
                width: 100%;
                padding: 12px;
                margin-top: 5px;
                border: 1px solid #ddd;
                border-radius: 5px;
                box-sizing: border-box;
            }

            .login-container button {
                width: 100%;
                padding: 12px;
                background-color: #007BFF;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .login-container button:hover {
                    background-color: #0056b3;
                }

        .validation-summary-errors {
            color: red;
            margin-bottom: 10px;
        }

        .field-validation-error {
            color: red;
            font-size: 0.9em;
            display: block;
            margin-top: 5px;
        }

        .validation-summary-errors {
            list-style: none; /* Xóa dấu bullet */
        }

            .validation-summary-errors::marker {
                content: none; /* Ẩn dấu bullet */
            }

        .register-link {
            text-align: center;
            margin-top: 15px;
        }

            .register-link a {
                color: #007BFF;
                text-decoration: none;
                font-size: 0.9em;
            }

                .register-link a:hover {
                    text-decoration: underline;
                    color: #0056b3;
                }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Đăng nhập</h2>
        <form asp-controller="Authentication" asp-action="Login" class="login-form">
            <div class="form-group">
                <label asp-for="AccountEmail">Email</label>
                <input type="email" asp-for="AccountEmail" placeholder="Nhập email" required>
                <span asp-validation-for="AccountEmail" class="field-validation-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountPassword">Mật khẩu</label>
                <input type="password" asp-for="AccountPassword" placeholder="Nhập mật khẩu" required>
                <span asp-validation-for="AccountPassword" class="field-validation-error"></span>
            </div>
            <div class="validation-summary-errors" asp-validation-summary="ModelOnly"></div>
            <button type="submit">Đăng nhập</button>
            <div class="register-link">
                <p>Chưa có tài khoản? <a asp-controller="Authentication" asp-action="Register">Đăng ký ngay</a></p>
            </div>
        </form>
    </div>
</body>
</html>