@model BusinessObjects.Models.NewsArticle

@{
    ViewData["Title"] = "Article Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card-header">
    <h3>Article Details</h3>
</div>

<div class="card-body">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.NewsTitle</dd>

        <dt class="col-sm-2">Headline</dt>
        <dd class="col-sm-10">@Model.Headline</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.NewsContent</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

        <dt class="col-sm-2">Created By</dt>
        <dd class="col-sm-10">@Model.CreatedBy?.AccountName</dd>

        <dt class="col-sm-2">Created Date</dt>
        <dd class="col-sm-10">@Model.CreatedDate?.ToString("MM/dd/yyyy HH:mm")</dd>
    </dl>

    <div class="mt-4">
        <form asp-action="Approve" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.NewsArticleId" />
            <button type="submit" class="btn btn-success"
                    onclick="return confirm('Are you sure you want to approve this article?')">
                <i class="bi bi-check-circle"></i> Approve
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>