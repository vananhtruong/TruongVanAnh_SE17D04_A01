@model IEnumerable<BusinessObjects.Models.NewsArticle>

@{
    ViewData["Title"] = "News Articles";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<div class="container-fluid py-5">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 1400px;">
        <div class="card-header bg-dark text-white p-4">
            <h1 class="h3 mb-0 fw-bold">News Articles</h1>
        </div>
        <div class="card-body p-4">
            <!-- Search and Buttons -->
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
                <div class="input-group" style="max-width: 400px;">
                    <span class="input-group-text bg-light border-0">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" id="searchInput" class="form-control" placeholder="Search articles..."
                           onkeyup="searchArticles(this.value)">
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-secondary" onclick="clearSearch()">Clear Search</button>
                    <a class="btn btn-success" asp-action="Create">
                        <i class="fas fa-plus me-1"></i> Create New
                    </a>
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" style="width: 100%;">
                    <thead class="table-dark">
                        <tr>
                            <th style="max-width: 150px;">@Html.DisplayNameFor(model => model.NewsTitle)</th>
                            <th style="max-width: 120px;">@Html.DisplayNameFor(model => model.Headline)</th>
                            <th style="max-width: 100px;">@Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th style="max-width: 120px;">@Html.DisplayNameFor(model => model.NewsContent)</th>
                            <th style="max-width: 100px;">@Html.DisplayNameFor(model => model.NewsSource)</th>
                            <th style="max-width: 80px;">@Html.DisplayNameFor(model => model.NewsStatus)</th>
                            <th style="max-width: 100px;">@Html.DisplayNameFor(model => model.UpdatedById)</th>
                            <th style="max-width: 100px;">@Html.DisplayNameFor(model => model.ModifiedDate)</th>
                            <th style="max-width: 100px;">@Html.DisplayNameFor(model => model.Category)</th>
                            <th style="max-width: 100px;">@Html.DisplayNameFor(model => model.CreatedBy)</th>
                            <th style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="articleTableBody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-truncate" style="max-width: 150px;" title="@item.NewsTitle">
                                    @Html.DisplayFor(modelItem => item.NewsTitle)
                                </td>
                                <td class="text-truncate" style="max-width: 120px;" title="@item.Headline">
                                    @Html.DisplayFor(modelItem => item.Headline)
                                </td>
                                <td style="max-width: 100px;">
                                    @Html.DisplayFor(modelItem => item.CreatedDate, "{0:MMM dd, yyyy}")
                                </td>
                                <td class="text-truncate" style="max-width: 120px;" title="@item.NewsContent">
                                    @Html.Raw(GetShortContent(item.NewsContent, 50))
                                </td>
                                <td class="text-truncate" style="max-width: 100px;" title="@item.NewsSource">
                                    @Html.DisplayFor(modelItem => item.NewsSource)
                                </td>
                                <td class="text-truncate" style="max-width: 80px;" title="@item.NewsStatus">
                                    @Html.DisplayFor(modelItem => item.NewsStatus)
                                </td>
                                <td class="text-truncate" style="max-width: 100px;" title="@item.UpdatedById">
                                    @Html.DisplayFor(modelItem => item.UpdatedById)
                                </td>
                                <td style="max-width: 100px;">
                                    @Html.DisplayFor(modelItem => item.ModifiedDate, "{0:MMM dd, yyyy}")
                                </td>
                                <td class="text-truncate" style="max-width: 100px;" title="@item.Category?.CategoryDesciption">
                                    @Html.DisplayFor(modelItem => item.Category.CategoryDesciption)
                                </td>
                                <td class="text-truncate" style="max-width: 100px;" title="@item.CreatedBy?.AccountId">
                                    @Html.DisplayFor(modelItem => item.CreatedBy.AccountId)
                                </td>
                                <td style="width: 150px;">
                                    <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@item.NewsArticleId">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-info btn-sm me-1" asp-action="Details" asp-route-id="@item.NewsArticleId">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.NewsArticleId"
                                       onclick="return confirm('Are you sure you want to delete this item?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetShortContent(string content, int maxLength)
    {
        if (string.IsNullOrEmpty(content))
            return string.Empty;

        if (content.Length <= maxLength)
            return content;

        return content.Substring(0, maxLength) + "...";
    }
}

