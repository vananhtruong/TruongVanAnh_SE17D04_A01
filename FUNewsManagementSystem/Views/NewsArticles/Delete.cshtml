@model BusinessObjects.Models.NewsArticle

@{
    ViewData["Title"] = "Delete News Article";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Confirm Deletion</h2>
        </div>

        <div class="card-body">
            <h4 class="text-muted mb-4">News Article Details</h4>
            <hr class="mb-4" />

            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                Are you sure you want to delete this article? This action cannot be undone.
            </div>

            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.NewsTitle)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NewsTitle)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.Headline)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Headline)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedDate)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.NewsContent)</dt>
                <dd class="col-sm-9 truncated-text">@Html.DisplayFor(model => model.NewsContent)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.NewsSource)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NewsSource)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.NewsStatus)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NewsStatus)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.UpdatedById)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedById)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.ModifiedDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ModifiedDate)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.Category)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryDesciption)</dd>

                <dt class="col-sm-3 fw-bold text-primary">@Html.DisplayNameFor(model => model.CreatedBy)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedBy.AccountId)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="NewsArticleId" />
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Delete Article
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .truncated-text {
        max-height: 100px;
        overflow-y: auto;
        word-wrap: break-word;
    }

    .card-header {
        border-bottom: none;
    }

    dt {
        margin-bottom: 0.5rem;
    }

    dd {
        margin-bottom: 1rem;
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script>
}