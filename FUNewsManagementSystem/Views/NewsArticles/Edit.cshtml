@model BusinessObjects.Models.NewsArticle

@{
    ViewData["Title"] = "Edit News Article";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient-primary text-white py-4 px-5">
            <h1 class="display-6 fw-bold mb-1">Edit News Article</h1>
            <p class="text-light opacity-75 mb-0">Update the details below</p>
        </div>
        <div class="card-body p-5">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert" if="ModelState.IsValid == false"></div>
                <input type="hidden" asp-for="NewsArticleId" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewsTitle" class="form-control shadow-sm" placeholder=" " required />
                            <label asp-for="NewsTitle" class="form-label"><i class="fas fa-heading me-2 text-muted"></i> News Title</label>
                            <span asp-validation-for="NewsTitle" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Headline" class="form-control shadow-sm" placeholder=" " required />
                            <label asp-for="Headline" class="form-label"><i class="fas fa-newspaper me-2 text-muted"></i> Headline</label>
                            <span asp-validation-for="Headline" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="CreatedDate" class="form-control shadow-sm" type="date" required />
                            <label asp-for="CreatedDate" class="form-label"><i class="fas fa-calendar-day me-2 text-muted"></i> Created Date</label>
                            <span asp-validation-for="CreatedDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewsSource" class="form-control shadow-sm" placeholder=" " required />
                            <label asp-for="NewsSource" class="form-label"><i class="fas fa-link me-2 text-muted"></i> News Source</label>
                            <span asp-validation-for="NewsSource" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating mb-3">
                            <textarea asp-for="NewsContent" class="form-control shadow-sm" rows="8" placeholder=" " style="min-height: 200px;" required></textarea>
                            <label asp-for="NewsContent" class="form-label"><i class="fas fa-file-alt me-2 text-muted"></i> News Content</label>
                            <span asp-validation-for="NewsContent" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="CategoryId" class="form-select shadow-sm" asp-items="ViewBag.CategoryId" required></select>
                            <label asp-for="CategoryId" class="form-label"><i class="fas fa-folder-open me-2 text-muted"></i> Category</label>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="NewsStatus" class="form-control shadow-sm" placeholder=" " required />
                            <label asp-for="NewsStatus" class="form-label"><i class="fas fa-check-circle me-2 text-muted"></i> News Status</label>
                            <span asp-validation-for="NewsStatus" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="CreatedById" class="form-select shadow-sm" asp-items="ViewBag.CreatedById" required></select>
                            <label asp-for="CreatedById" class="form-label"><i class="fas fa-user me-2 text-muted"></i> Created By</label>
                            <span asp-validation-for="CreatedById" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="UpdatedById" class="form-control shadow-sm" placeholder=" " />
                            <label asp-for="UpdatedById" class="form-label"><i class="fas fa-user-edit me-2 text-muted"></i> Updated By</label>
                            <span asp-validation-for="UpdatedById" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ModifiedDate" class="form-control shadow-sm" type="date" />
                            <label asp-for="ModifiedDate" class="form-label"><i class="fas fa-clock me-2 text-muted"></i> Modified Date</label>
                            <span asp-validation-for="ModifiedDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between flex-wrap gap-3 mt-5">
                    <button type="submit" class="btn btn-success btn-lg px-4 py-2 shadow-sm">
                        <i class="fas fa-save me-2"></i> Save Changes
                    </button>
                    <a class="btn btn-outline-dark btn-lg px-4 py-2 shadow-sm" asp-action="Index">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff, #0056b3);
    }

    .form-control, .form-select {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
            border-color: #007bff;
        }

    .form-floating label {
        color: #6c757d;
        font-weight: 500;
    }

    .form-control.form-control-lg {
        padding: 1rem;
    }

    .btn-lg {
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745, #218838);
        border: none;
    }

    .btn-outline-dark:hover {
        background-color: #343a40;
        color: white;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}