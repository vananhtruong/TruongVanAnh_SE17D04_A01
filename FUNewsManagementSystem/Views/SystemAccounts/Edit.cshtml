@model BusinessObjects.Models.SystemAccount

@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Edit Account</h5>
            <a asp-action="Index" class="btn btn-sm btn-outline-light">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="AccountId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                <!-- Account Name -->
                <div class="row mb-3">
                    <label asp-for="AccountName" class="col-md-3 col-form-label fw-bold"></label>
                    <div class="col-md-9">
                        <input asp-for="AccountName" class="form-control" placeholder="Enter account name" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                </div>

                <!-- Account Email -->
                <div class="row mb-3">
                    <label asp-for="AccountEmail" class="col-md-3 col-form-label fw-bold"></label>
                    <div class="col-md-9">
                        <input asp-for="AccountEmail" class="form-control" type="email" placeholder="Enter email address" />
                        <span asp-validation-for="AccountEmail" class="text-danger"></span>
                    </div>
                </div>

                <!-- Account Role (Dropdown) -->
                <div class="row mb-3">
                    <label asp-for="AccountRole" class="col-md-3 col-form-label fw-bold"></label>
                    <div class="col-md-9">
                        <select asp-for="AccountRole" class="form-select" asp-items="@((IEnumerable<SelectListItem>)ViewBag.RoleList)"></select>
                        <span asp-validation-for="AccountRole" class="text-danger"></span>
                    </div>
                </div>

                <!-- Account Password -->
                <div class="row mb-4">
                    <label asp-for="AccountPassword" class="col-md-3 col-form-label fw-bold"></label>
                    <div class="col-md-9">
                        <input asp-for="AccountPassword" class="form-control" type="password" placeholder="Enter new password (leave blank to keep current)" />
                        <span asp-validation-for="AccountPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}