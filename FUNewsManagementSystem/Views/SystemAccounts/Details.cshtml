@model BusinessObjects.Models.SystemAccount

@{
    ViewData["Title"] = "Account Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    // Lấy role từ ViewBag
    var roleMapping = ViewBag.RoleMapping as Dictionary<int, string>;
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Account Details</h5>
            <a asp-action="Index" class="btn btn-sm btn-outline-light">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
        <div class="card-body p-4">
            <dl class="row mb-0">
                <!-- Account Name -->
                <dt class="col-md-3 fw-bold text-muted">
                    @Html.DisplayNameFor(model => model.AccountName)
                </dt>
                <dd class="col-md-9">
                    @Html.DisplayFor(model => model.AccountName)
                </dd>

                <!-- Account Email -->
                <dt class="col-md-3 fw-bold text-muted">
                    @Html.DisplayNameFor(model => model.AccountEmail)
                </dt>
                <dd class="col-md-9">
                    <a href="mailto:@Model.AccountEmail" class="text-decoration-none">
                        @Html.DisplayFor(model => model.AccountEmail)
                    </a>
                </dd>

                <!-- Account Role -->
                <dt class="col-md-3 fw-bold text-muted">
                    @Html.DisplayNameFor(model => model.AccountRole)
                </dt>
                <dd class="col-md-9">
                    <span class="badge bg-primary-subtle text-primary">
                        @(Model.AccountRole.HasValue && roleMapping != null && roleMapping.ContainsKey(Model.AccountRole.Value)
                            ? roleMapping[Model.AccountRole.Value]
                            : Model.AccountRole?.ToString() ?? "N/A")
                    </span>
                </dd>

                <!-- Account Password -->
                <dt class="col-md-3 fw-bold text-muted">
                    @Html.DisplayNameFor(model => model.AccountPassword)
                </dt>
                <dd class="col-md-9">
                    <em class="text-muted">********</em>
                </dd>
            </dl>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.AccountId" class="btn btn-primary">
                    <i class="bi bi-pencil me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>