@model BusinessObjects.Models.SystemAccount

@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Create New Account</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Account ID -->
                <div class="mb-3">
                    <label asp-for="AccountId" class="form-label fw-bold"></label>
                    <input asp-for="AccountId" class="form-control" placeholder="Enter account ID" />
                    <span asp-validation-for="AccountId" class="text-danger"></span>
                </div>

                <!-- Account Name -->
                <div class="mb-3">
                    <label asp-for="AccountName" class="form-label fw-bold"></label>
                    <input asp-for="AccountName" class="form-control" placeholder="Enter account name" />
                    <span asp-validation-for="AccountName" class="text-danger"></span>
                </div>

                <!-- Account Email -->
                <div class="mb-3">
                    <label asp-for="AccountEmail" class="form-label fw-bold"></label>
                    <input asp-for="AccountEmail" class="form-control" type="email" placeholder="Enter email" />
                    <span asp-validation-for="AccountEmail" class="text-danger"></span>
                </div>

                <!-- Account Role -->
                <div class="mb-3">
                    <label asp-for="AccountRole" class="form-label fw-bold"></label>
                    <input asp-for="AccountRole" class="form-control" placeholder="Enter role" />
                    <span asp-validation-for="AccountRole" class="text-danger"></span>
                </div>

                <!-- Account Password -->
                <div class="mb-3">
                    <label asp-for="AccountPassword" class="form-label fw-bold"></label>
                    <input asp-for="AccountPassword" class="form-control" type="password" placeholder="Enter password" />
                    <span asp-validation-for="AccountPassword" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label fw-bold">Confirm Password</label>
                    <input id="confirmPassword" name="confirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                    <span class="text-danger" id="confirm-password-error">@ViewData["PasswordMismatch"]</span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                var password = $('#AccountPassword').val();
                var confirmPassword = $('#confirmPassword').val();

                if (password !== confirmPassword) {
                    e.preventDefault();
                    $('#confirm-password-error').text('Passwords do not match.');
                } else {
                    $('#confirm-password-error').text('');
                }
            });
        });
    </script>
}