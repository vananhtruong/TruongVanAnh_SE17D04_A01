@model BusinessObjects.Models.SystemAccount

@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<h2>Edit Account</h2>
<hr />

<div class="card shadow p-4 mt-3">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Hidden Fields -->
        <input type="hidden" asp-for="AccountId" />
        <input type="hidden" asp-for="AccountEmail" />
        <input type="hidden" asp-for="AccountRole" />

        <!-- Account Name -->
        <div class="form-group mb-3">
            <label asp-for="AccountName" class="form-label fw-bold"></label>
            <input asp-for="AccountName" class="form-control" />
            <span asp-validation-for="AccountName" class="text-danger"></span>
        </div>

        <!-- Account Password -->
        <div class="form-group mb-3">
            <label asp-for="AccountPassword" class="form-label fw-bold"></label>
            <input type="password" asp-for="AccountPassword" class="form-control" />
            <span asp-validation-for="AccountPassword" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between">
            <a asp-action="Details" class="btn btn-secondary">Backt</a>
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}