<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <!-- CSS Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/prn222_assignment_01.styles.css" asp-append-version="true">
    <style>
        /* Custom Styles */
        .sidebar {
            min-width: 250px;
            max-width: 250px;
            background-color: #2c3e50;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            transition: all 0.3s;
        }

            .sidebar .nav-link {
                color: #ecf0f1;
                padding: 12px 20px;
                border-radius: 5px;
                margin: 5px 15px;
            }

                .sidebar .nav-link:hover {
                    background-color: #34495e;
                    color: #fff;
                }

                .sidebar .nav-link.active {
                    background-color: #3498db;
                    color: #fff;
                }

        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            background-color: #f5f6fa;
        }

        .navbar-top {
            background-color: #fff;
            border-bottom: 1px solid #eee;
            padding: 10px 20px;
            margin-left: 250px;
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #eee;
            padding: 15px 20px;
        }

        .footer {
            margin-left: 250px;
            padding: 15px 20px;
            background-color: #fff;
            border-top: 1px solid #eee;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Sidebar Navigation -->
    <div class="sidebar">
        <div class="text-center mb-4">
            <h4 class="text-white">Admin Panel</h4>
        </div>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="SystemAccounts" asp-action="Index">
                    <i class="bi bi-people me-2"></i> Accounts
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Report" asp-action="Report">
                    <i class="bi bi-bar-chart me-2"></i> Reports
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="NewsApproval" asp-action="Index">
                    <i class="bi bi-bar-chart me-2"></i> News Approval
                </a>
            </li>
        </ul>
    </div>

    <!-- Top Navbar -->
    <nav class="navbar-top shadow-sm">
        <div class="d-flex justify-content-between w-100 align-items-center">
            <span class="navbar-brand mb-0 h1">Dashboard</span>
            <form asp-controller="Authentication" asp-action="Logout" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </button>
            </form>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="card shadow-sm">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer text-muted">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    © 2025 - Admin Dashboard
                </div>
                <div class="col-md-6 text-end">
                    <a href="#" class="text-muted">Privacy Policy</a> |
                    <a href="#" class="text-muted">Support</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript Files -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>